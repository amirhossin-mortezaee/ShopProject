@model ProjectShopCMS.DAL.ProductGrops

@{
    ViewBag.Title = "Create";
}

@using (Ajax.BeginForm("Create","ProductGrops",FormMethod.Post,
    new AjaxOptions()
    {
        OnSuccess ="success",
        UpdateTargetId= "ListProductGrops"
    }
    ))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.GroupTitle,"نام سرگروه", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-offset-8">
                @Html.EditorFor(model => model.GroupTitle, new { htmlAttributes = new { @class = "form-control col-md-8" } })
                @Html.ValidationMessageFor(model => model.GroupTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="افزودن سر گروه" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("بازگشت به لیست", "Index")
</div>
